{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "lib": ["esnext"],
    "outDir": "dist",
    "target": "es2022",
    "module": "NodeNext",
    "strictFunctionTypes": true,
    "strictNullChecks": true,
    "noFallthroughCasesInSwitch": true,
    "alwaysStrict": true
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["node_modules", "__tests__", "dist"]
}
